@model IEnumerable<WebAppCondominio.Models.Morador>

@{
    ViewData["Title"] = "Moradores";
}

<h2>Moradores</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Familia)
            </th>
            <th>
                Qtde Bichos Estimação
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Familia.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeBichosEstimacao)
            </td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.MoradorID">Editar</a>
                <a href="#" class="btn btn-default btn-details-morador" data-value="@item.MoradorID">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MoradorID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="modal" id="modal-details" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div id="body-content"></div>
            </div>
        </div>
    </div>
</div>