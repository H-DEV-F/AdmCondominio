@model WebAppCondominio.Models.Morador

@{
    ViewData["Title"] = "Editar o Morador";
}

<h2>Eitar</h2>

<h4>Morador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MoradorID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamiliaID" class="control-label">Familia</label>
                <select asp-for="FamiliaID" class="form-control" asp-items="ViewBag.Familia"></select>
                <span asp-validation-for="FamiliaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeBichosEstimacao" class="control-label">Qtde Bichos Estimação</label>
                <input asp-for="QuantidadeBichosEstimacao" class="form-control" />
                <span asp-validation-for="QuantidadeBichosEstimacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-default" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
