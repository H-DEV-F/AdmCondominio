@using (Html.BeginForm("", "", FormMethod.Post, new { id = "CreateCompanyDataEntryForm" }))
{
@Html.AntiForgeryToken()
}
@model WebAppCondominio.Models.Familia

@{
    ViewData["Title"] = "Editar a Familia";
}

<h2>Editar</h2>

<h4>Familia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="form-create-familia">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FamiliaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group my-group">
                    <select asp-for="CondominioID" class="selectpicker form-control" asp-items="ViewBag.Condominio" style="height: 40px;"></select>
                    <span asp-validation-for="CondominioID" class="text-danger"></span>
                    <span class="input-group-btn">
                        <button type=button class="btn btn-primary" id="btn-new-condominio" style="padding-top: 10px;" data-toggle="modal" data-target="#modal-create-condominio">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                            </svg>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Apto" class="control-label"></label>
                <input asp-for="Apto" class="form-control" />
                <span asp-validation-for="Apto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-default" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
    <div class="modal fade" id="modal-create-condominio" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="exampleModalLongTitle">Cadastrar Condominio</h4>
                </div>
                <div class="modal-body">
                    <form asp-action="" id="form-modal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Condominio.Nome" class="control-label"></label>
                            <input asp-for="Condominio.Nome" class="form-control" id="condominio-nome" />
                            <span asp-validation-for="Condominio.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Condominio.Bairro" class="control-label"></label>
                            <input asp-for="Condominio.Bairro" class="form-control" id="condominio-bairro" />
                            <span asp-validation-for="Condominio.Bairro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary" id="save-condomnium" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        </div>
                        <div class="alert alert-success" role="alert" style="display: none;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
